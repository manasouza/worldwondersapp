<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.worldwondersapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.curso.android.ciant.worldwondersapp.activity.MainActivity"
            android:label="@string/app_name" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       
        <activity
            android:name="com.curso.android.ciant.worldwondersapp.activity.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.curso.android.ciant.worldwondersapp.activity.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        
        <provider
            android:name=".contentprovider.WorldWondersContentProvider"
            android:authorities="com.curso.android.ciant.worldwondersapp"
            android:exported="false" />
        
    </application>
</manifest>
